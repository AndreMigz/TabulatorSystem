<!-- Button to open modal -->
<button type="button" class="btn btn-secondary" data-action="" data-toggle="modal" data-target="#addContestantModal">
  Add Contestant
</button>

<!-- Modal -->
<div class="modal fade" id="addContestantModal" tabindex="-1" role="dialog" aria-labelledby="addContestantModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: contestant, url: admin_contestants_path, method: :post, local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" >Add Contestant </h5>
        </div>
        <div class="modal-body">
          <%= form.hidden_field :user_id, value: admin.id %>
          <!-- Input fields inside modal -->
          <div class="mb-3">
            <%= form.label :first_name, "First Name:" %>
            <%= form.text_field :first_name, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= form.label :middle_name, "Middle Name:" %>
            <%= form.text_field :middle_name, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= form.label :last_name, "Last Name:" %>
            <%= form.text_field :last_name, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= form.label :age, "Age:" %>
            <%= form.number_field :age, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= form.label :address, "Address:" %>
            <%= form.text_field :address, class: "form-control", required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
          <%= form.submit "Save", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>